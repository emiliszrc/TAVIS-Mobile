<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TravelManagerPrototype.Login">
    <ContentPage.Content>
        <AbsoluteLayout Padding="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" WidthRequest="100">
            <BoxView AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" WidthRequest="100"/>
            <StackLayout Padding="1" Orientation="Vertical" AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1" AbsoluteLayout.LayoutFlags="PositionProportional" WidthRequest="250">
                <Entry x:Name="UsernameEntry" Placeholder="email" Text="" HorizontalOptions="FillAndExpand"/>
                <Entry x:Name="PasswordEntry" Placeholder="password" IsPassword="true" Text="" WidthRequest="100"/>
                <Button Clicked="TryLogin" Text="Submit"></Button>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>